{
    "compilerOptions": {
      "experimentalDecorators": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": ".",
      "typeRoots": ["./src/types"],
      "paths": {
        "*": ["src/*"],
        "tests": ["tests/*"],
        "@components/*": ["src/components/*"],
        "@graphql/*": ["src/graphql/*"],
        "@containers/*": ["src/containers/*"],
        "@constant/*": ["src/constant/*"],
        "@assets/*": ["src/assets/*"],
        "@api/*": ["src/api/*"],
        "@database/*": ["src/database/*"],
        "@navigation/*": ["src/navigation/*"],
        "@util/*": ["src/util/*"],
        "@styles/*": ["src/styles/*"],
      },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }